<?php
// ====== DATA PROFIL (boleh ubah ikut diri anda) ======
$profile = [
    "name" => "Nama Anda",
    "job" => "Web Developer",
    "about" => "Saya seorang pembangun web yang berminat dengan teknologi moden, PHP, dan reka bentuk responsif.",
    "email" => "anda@example.com",
    "phone" => "+60 12-3456789",
    "skills" => ["HTML", "CSS", "PHP", "JavaScript", "MySQL"]
];

// ====== LOGIK BORANG HUBUNGI ======
$messageSent = false;
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $name = htmlspecialchars($_POST["name"]);
    $email = htmlspecialchars($_POST["email"]);
    $message = htmlspecialchars($_POST["message"]);

    // Boleh gantikan bahagian ini untuk simpan ke DB atau hantar email sebenar
    $messageSent = true;
}
?>
<!DOCTYPE html>
<html lang="ms">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><?php echo $profile['name']; ?> - Portfolio</title>
